<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/startFrame"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTintMode="screen"
        android:background="@drawable/start_bg"
        android:weightSum="100"
        android:orientation="vertical"
        android:clipChildren="false">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:weightSum="100"
            android:layout_weight="15">
            <LinearLayout
                android:layout_width="0dip"
                android:layout_weight="20"
                android:layout_height="fill_parent"
                android:background="@drawable/start_markerlogo"
                android:backgroundTintMode="screen"></LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_weight="75"
            android:weightSum="1000"
            android:clipChildren="false" android:clipToPadding="false">
            <LinearLayout
                android:layout_width="0dip"
                android:layout_weight="100"
                android:layout_height="fill_parent"
                android:gravity="center"
                >

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/newreturn"
                    android:src="@drawable/start_leftarrow"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:focusableInTouchMode="false"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_weight="350"
                android:layout_height="fill_parent"
                android:clipChildren="false" android:clipToPadding="false"
                android:id="@+id/openbtncon">
                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:clipChildren="false" android:clipToPadding="false"
                    android:id="@+id/openlayer">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:clipChildren="true" android:clipToPadding="true"
                        android:id="@+id/opmucon"
                        android:background="@drawable/start_button"
                        android:visibility="gone"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp">
                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:orientation="vertical"
                            android:weightSum="10">
                            <ListView
                                android:layout_width="fill_parent"
                                android:layout_height="0dp"
                                android:layout_weight="10"
                                android:id="@+id/openmenu"
                                android:visibility="visible"
                                android:scrollbars="none"/>
                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="10">
                                <Button
                                    android:id="@+id/openListDeleteBtn"
                                    android:layout_width="0dp"
                                    android:layout_weight="5"
                                    android:layout_height="wrap_content"
                                    android:text="Delete"
                                    android:visibility="visible"/>
                                <Button
                                    android:id="@+id/openListOpenBtn"
                                    android:layout_width="0dp"
                                    android:layout_weight="5"
                                    android:layout_height="wrap_content"
                                    android:text="Open"
                                    android:visibility="visible"/>
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/openbtn"
                        android:src="@drawable/start_openbtn"
                        android:interpolator="@android:anim/linear_interpolator"/>

                </FrameLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="0dip"
                android:layout_weight="100"
                android:layout_height="fill_parent"></LinearLayout>
            <LinearLayout
                android:layout_width="0dip"
                android:layout_weight="350"
                android:layout_height="fill_parent"
                android:clipChildren="false" android:clipToPadding="false"
                android:id="@+id/newbtncon">

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:id="@+id/newlayer">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:clipChildren="true"
                        android:clipToPadding="true"
                        android:id="@+id/newmucon"
                        android:visibility="gone"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:background="@drawable/start_button"
                        android:paddingRight="5dp"
                        android:paddingLeft="5dp">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:orientation="vertical"
                            android:weightSum="10">
                            <ListView
                                android:layout_width="fill_parent"
                                android:layout_height="0dp"
                                android:layout_weight="10"
                                android:id="@+id/newmenu"
                                android:visibility="visible"
                                android:scrollbars="none"
                                android:layout_gravity="top"/>
                            <Button
                                android:id="@+id/newListBtn"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text="New"
                                android:visibility="visible"
                                />
                        </LinearLayout>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/newbtn"
                        android:src="@drawable/start_newbtn"
                        android:interpolator="@android:anim/linear_interpolator"/>

                </FrameLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dip"
                android:layout_weight="100"
                android:layout_height="fill_parent"
                android:gravity="center">

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/opreturn"
                    android:src="@drawable/start_rightarrow"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:focusableInTouchMode="false"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/splash_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#000000">

        <VideoView
            android:id="@+id/splash_vid"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

</FrameLayout>
